---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

const projects = (await getCollection("work"))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 4);
---

<BaseLayout>
  <main class="flex flex-col gap-20">
    <div class="absolute h-full w-[50dvw] border-r"></div>

    <!-- HERO SECTION -->
    <div
      class="flex flex-col bg-[url('img/hero.jpg')] bg-no-repeat bg-cover bg-[center_bottom_0rem] text-white"
    >
      <div
        class="font-sans self-center max-w-[85dvw] md:max-w-[80dvw] stack gap-8 lg:gap-20 font-semibold"
      >
        <header
          class="h-screen flex flex-col gap-8 grid-flow-row justify-end py-32 text-center"
        >
          <h2 class="text-3xl md:text-7xl uppercase tracking-widest">
            Solve your Problems
          </h2>
          <h2 class="text-3xl md:text-7xl uppercase tracking-widest">
            at the root.
          </h2>
          <div class="flex flex-col gap-8 items-center">
            <a href="/services" class="p-2 rounded-lg">Find out more</a>
          </div>
        </header>
      </div>
    </div>

    <!-- Elevator Pitch -->
    <div
      class="flex flex-col h-[70vh] text-black text-center justify-between p-20"
    >
      <div class="text-5xl">
        NO MORE STRUGGLING WITH THE SAME PATTERNS FOR YEARS
      </div>
      <div class="text-6xl px-64">
        I AM HERE TO HELP YOU ADDRESS ISSUES ON A ROOT LEVEL
      </div>
